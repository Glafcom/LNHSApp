                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    if (Model.UpcomingTournaments.Count > 10)
                    {
                        <a href="@Url.Action("UpcomingTournaments", "Tournaments")" class="btn btn-default">More</a>
                    }
                }
                else
                {
                    <p>There are no tournaments</p>
                }
                
            </div>
            <div role="tabpanel" class="tab-pane" id="pastTournaments">
                @if (Model.PastTournaments != null && Model.PastTournaments.Count > 0)
