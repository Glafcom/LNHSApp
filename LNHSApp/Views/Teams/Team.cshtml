@using LNHSApp.Models.TeamsViewModels;
@model TeamViewModel

@{
    ViewBag.Title = "Team";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Team "@Model.Name"</h2>

<div class="team-info-container container">
    <table class="table table-bordered">
        <tbody>
            <tr>
                <td>Current Rating</td>
                <td>@Model.Rating</td>
            </tr>
            <tr>
                <td>Country</td>
                <td>@Model.Country</td>
            </tr>
            <tr>
                <td>City</td>
                <td>@Model.City</td>
            </tr>
            <tr>
                <td>Description</td>
                <td>@Model.Description</td>
            </tr>            
        </tbody>
    </table>
</div>

<div class="team-players-container container">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th>Surname</th>
                <th>Age</th>
                <th>Country</th>
                <th>City</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var player in Model.Players)
            {
                <tr>
                    <td>@player.Name</td>
                    <td>@player.Surname</td>
                    <td>@player.Age</td>
                    <td>@player.Country</td>
                    <td>@player.City</td>
                    <td>
                        <a href="@Url.Action("Player", "Players", new { playerId = player.Id })" class="btn btn-default">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

